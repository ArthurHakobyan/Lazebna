import Button from './UI/Button.astro';
import navLogo from '../assets/Logo lazebna.svg';
import { Image } from "astro:assets";

---

<footer class="max-w-425 mx-auto rounded-xl relative text-white pt-32 pb-8 mt-20 bg-white/5 border border-white/10 shadow-[2px_4px_4px_rgba(63,63,63,0.32)]">
  <div class="absolute top-0 left-1/2 -translate-x-1/2 -translate-y-1/2 w-full lg:max-w-7xl px-4">
    <div class="bg-orange rounded-xl p-10 md:p-16 text-center shadow-2xl">
      <h2 class="text-xl md:text-2xl font-normal mb-6 text-white">
        Jseš ready? Rezervuj a jdeme na to
      </h2>
      <Button
      title="BOOK NOW"
      href="https://lazebna.reservio.com/" 
      variant="secondary"
      />
    </div>
  </div>

  <div class="max-w-7xl mx-auto grid grid-cols-1 md:grid-cols-2 gap-6 mt-10 px-4">
    <div class="space-y-10">
      <div class="space-y-1">
        <div>
    <a href="#">
      <Image 
        src={navLogo} 
        alt="Lazebna Logo" 
        class="w-32 lg:w-[180px] h-auto" 
      />
    </a>
  </div>
        <p class="text-[10px] uppercase tracking-[0.2em] text-gray-400 font-medium">
          Moderní zážitek <br /> Poctivé řemeslo
        </p>
      </div>

      <div class="text-gray-300 space-y-4 text-sm md:text-base">
        <p>
          <a class="text-sm text-center" href="https://www.google.com/maps/place/Lazebna/@49.2206821,16.5964597,17z/data=!3m1!4b1!4m6!3m5!1s0x471295003fd9ed63:0xba8d1b4fdb15bf7e!8m2!3d49.2206821!4d16.5964597!16s%2Fg%2F11xkldd4ml?entry=ttu&g_ep=EgoyMDI2MDEwNy4wIKXMDSoKLDEwMDc5MjA3MUgBUAM%3D">
            Palackého třída 13<br />
            612 00 Brno-Královo Pole
          </a>
        </p>
        <p>
          <a href="tel:+420724704471" class="hover:text-white transition-colors">+420 724 704 471</a>
        </p>
        <p>
          <a href="mailto:barbershop@lazebna.com" class="hover:text-white transition-colors">barbershop@lazebna.com</a>
        </p>
      </div>

      <div class="flex gap-4">
        <a href="https://www.instagram.com/lazebna_barbershop/" class="text-white hover:text-gray-400 transition-colors">
          <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path><line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line></svg>
