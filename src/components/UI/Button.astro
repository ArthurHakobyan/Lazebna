---
const { title, href, ...rest } = Astro.props;
const Element = href ? 'a' : 'button';
---

<Element 
  href={href} 
  {...rest} 
  class="text-orange lg:text-grey px-[62.5px] py-[12px] bg-white/5 border border-white/10 rounded-xl shadow-[2px_4px_4px_rgba(63,63,63,0.32)] hover:text-orange hover:bg-orange/15 hover:border-orange/75 hover:shadow-[2px_4px_4px_rgba(233,82,14,0.32)] transition-[box-shadow,color,border-color] duration-300 ease-in-out"
>
  {title}
</Element>